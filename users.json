{
  "openapi": "3.0.1",
  "info": {
    "title": "Users Domain",
    "description": "The Users domain deals with the authorization of users, as well as the management of Plan4Flex users.",
    "version": "v1"
  },
  "servers": [
    {
      "url": "{host}/{tenant}/Users/v1",
      "variables": {
        "host": {
          "default": "https://api-plan4flex.micros.nl"
        },
        "tenant": {
          "default": "NO_TENANT_SET"
        }
      }
    }
  ],
  "paths": {
    "/Authentication/BasicAuthentication": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "POST - Authentication/BasicAuthentication",
        "operationId": "POST_Authentication/BasicAuthentication",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasicAuthenticationRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/BasicAuthenticationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResult"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/Authentication/KeyBasedAuthentication": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "POST - Authentication/KeyBasedAuthentication",
        "operationId": "POST_Authentication/KeyBasedAuthentication",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/KeyAuthenticationRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/KeyAuthenticationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResult"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/intermediary": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "GET - intermediary",
        "operationId": "GET_intermediary",
        "parameters": [
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "maximum": 2147483647,
              "minimum": 0,
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          },
          {
            "name": "amount",
            "in": "query",
            "schema": {
              "maximum": 1000,
              "minimum": 1,
              "type": "integer",
              "format": "int32",
              "default": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PagedResult<Users.User>"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/accountmanagers": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "GET - accountmanagers",
        "operationId": "GET_accountmanagers",
        "parameters": [
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "maximum": 2147483647,
              "minimum": 0,
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          },
          {
            "name": "amount",
            "in": "query",
            "schema": {
              "maximum": 1000,
              "minimum": 1,
              "type": "integer",
              "format": "int32",
              "default": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PagedResult<Users.User>"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BasicAuthenticationRequest": {
        "type": "object",
        "properties": {
          "userName": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "KeyAuthenticationRequest": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "PagedResult<Users.User>": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Users.User"
            },
            "description": "The requested data.",
            "nullable": true
          },
          "pagination": {
            "$ref": "#/components/schemas/PagedResult<Users.User>.PaginationInfo"
          }
        },
        "additionalProperties": false,
        "description": "Default response for paged results."
      },
      "PagedResult<Users.User>.PaginationInfo": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer",
            "description": "The total amount of items that can be paginated over.",
            "format": "int32"
          }
        },
        "additionalProperties": false,
        "description": "Information about the pagination."
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "TokenResult": {
        "required": [
          "token"
        ],
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Users.User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "lastName": {
            "type": "string",
            "nullable": true
          },
          "firstName": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "The authorization header. This should be passed with value \"bearer &lt;token&gt;\". The token can be obtained through the Users Domain. See also the Getting Started page.",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}